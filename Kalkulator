liczba1 = float(input("Wprowadz pierwsza liczbe: "))
liczba2 = float(input("Wprowadz druga liczbe: "))
dzialanie = input("Jakie dzialanie chcesz wykonac? (+ - * /):")

if dzialanie == "+":
    print(liczba1+liczba2)
elif dzialanie == "-":
    print(liczba1-liczba2)
elif dzialanie == "*":
    print(liczba1*liczba2)
elif dzialanie == "/":
    print(liczba1/liczba2)
